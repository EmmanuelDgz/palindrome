<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Palindrome">

    <EditText
        android:id="@+id/inputText"
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnVerifyPalindrome"
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/btnVerifyPalindrome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputText" />

    <TextView
        android:id="@+id/labelPalResult"
        android:layout_width="344dp"
        android:layout_height="30dp"
        android:layout_marginTop="40dp"
        android:text="@string/labelPalResult"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/btnVerifyPalindrome"
        tools:layout_editor_absoluteX="8dp" />

    <TextView
        android:id="@+id/alreves"
        android:layout_width="344dp"
        android:layout_height="27dp"
        android:layout_marginTop="24dp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/cantidad"
        tools:layout_editor_absoluteX="8dp" />

    <TextView
        android:id="@+id/masrepetido"
        android:layout_width="344dp"
        android:layout_height="31dp"
        android:layout_marginTop="28dp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/alreves"
        tools:layout_editor_absoluteX="8dp" />

    <TextView
        android:id="@+id/cantidad"
        android:layout_width="344dp"
        android:layout_height="24dp"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/labelPalResult"
        tools:layout_editor_absoluteX="8dp" />
</android.support.constraint.ConstraintLayout>